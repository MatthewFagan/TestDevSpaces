DBENV=$(kubectl get secret gitpod-database -o json)
GPHOST=`echo "$DBENV" | jq -r '.data.host' | base64 --decode`
GPPORT=`echo "$DBENV" | jq -r '.data.port' | base64 --decode`
GPUSER=`echo "$DBENV" | jq -r '.data.user' | base64 --decode`
GPPW=`echo "$DBENV" | jq -r '.data.password' | base64 --decode`
GPDB=`echo "$DBENV" | jq -r '.data.database' | base64 --decode`
mysql --host=$GPHOST --port=$GPPORT --user=$GPUSER --password=$GPPW $GPDB